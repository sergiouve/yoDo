	options = json.load(settings_file)

sys.path.insert(0, options['paths']['libs'])
sys.path.insert(0, options['paths']['modules'])

from yoDo import Yodo

dev = True
current_dir = os.getcwd()
ver = '0.1.0'

if dev:
	import pprint
	print '--------------'
	print 'Dev stuff, nevermind...'
